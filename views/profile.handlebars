<body>
    <div class="container">
        <div class="row">
            <div class="user__profile center-align">
                <div class="pet__info">
                    <div class="carousel" style="height: 45rem; margin:0">
                        <div class="card-wrapper" style="display:flex;flex-direction:row;font-family:'Quicksand', sans-serif">
                        {{#each user.Pets}}
                            <div class="card carousel-item" style="width:25rem; height:37rem;">
                                <div class="card-image">
                                    <div class="slider profile-slider" style="max-height:18rem">
                                        <ul class="slides" style="max-height:18rem">
                                            {{#each Pictures}}
                                            <li>
                                                <img class="responsive-img" style="max-height:18rem" src={{pictureUrl}}
                                                    alt="">
                                            </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <span class="card-title">{{name}}</span>
                                </div>
                                <div class="card-content">
                                    <p>Gender: {{gender}}</p>
                                    <p>Age: {{age}}</p>
                                    <p>Breed: {{breed}}</p>
                                    <p>Color: {{color}}</p>
                                    <p>Vaccinated: {{vaccinated}}</p>
                                    <p>Hobbies: {{hobbies}}</p>
                                </div>
                                <div class="card-action">
                                    <a href="/pets/edit/{{id}}" class="waves-effect waves-light btn-small">Edit</a>
                                    <button class="delPetBtn waves-effect waves-light btn-small"
                                        data-petid={{id}}>Delete</button>
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                <a href="/newpet" class="#81c784 green lighten-2 btn-floating btn-large waves-effect waves-light red"><i
                        class="material-icons">add</i></a>
            </div>
        </div>
        <div class="user__description row">
            <div class="user">
                <div class="user__top">
                    <img class="user__picture responsive-img circle"
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQnxMYq7EN3zM-cVRUOxBq5r2rIrYBepIpyAA&usqp=CAU"
                        alt="">
                    <div class="userTop__info">
                        <h3>{{user.first_name}} {{user.email}}</h3>
                    </div>
                </div>
                <div class="user__bottom">
                    <p>
                        Hi! My name is {{user.first_name}} and this is my dog {{name}}. We just moved here from NYC and
                        are
                        looking for some friends to meet up for play dates!
                    </p>
                    <a href="/{{user.id}}"><button class="waves-effect waves-light btn-small">Edit User</button></a>
                </div>
            </div>
        </div>
    </div>
</body>

